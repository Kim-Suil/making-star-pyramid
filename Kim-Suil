#include <stdio.h>

int main(){
  int height, space, star;
  printf("input pyramid: ");
  scanf_s("%d",&height);

  for (int i = 0; i < height; i++){
    for (space = 0; space < height -i; space++){
      printf(" ");
    }
    for (star = 0; star < i; space++){
      printf("* ");
    }
  printf("\n");
  }
}
